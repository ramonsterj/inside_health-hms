{
  "name": "hms-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .vue,.js,.ts,.tsx",
    "lint:fix": "eslint src --ext .vue,.js,.ts,.tsx --fix",
    "lint:oxlint": "oxlint src",
    "lint:all": "npm run lint && npm run lint:oxlint",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "check": "npm run lint && npm run lint:oxlint && npm run format:check && vue-tsc --noEmit",
    "audit": "npm audit --audit-level=high",
    "audit:fix": "npm audit fix",
    "security": "npm run audit && npm run lint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:run && npm run test:e2e"
  },
  "dependencies": {
    "@fontsource/lato": "^5.2.7",
    "@primeuix/themes": "^2.0.2",
    "@vee-validate/zod": "^4.15.1",
    "axios": "^1.13.5",
    "chart.js": "^4.5.1",
    "dompurify": "^3.3.1",
    "pinia": "^3.0.4",
    "primeicons": "^7.0.0",
    "primevue": "^4.5.4",
    "quill": "2.0.2",
    "tailwindcss-primeui": "^0.6.1",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.24",
    "vue-i18n": "^10.0.8",
    "vue-router": "^4.6.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@pinia/testing": "^1.0.3",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^24.10.9",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-vue": "^10.7.0",
    "globals": "^17.0.0",
    "happy-dom": "^20.3.4",
    "oxlint": "^1.39.0",
    "prettier": "^3.8.0",
    "sass": "^1.97.2",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.17",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.4"
  }
}
